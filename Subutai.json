{
    "name": "${environmentName}",
    "description": "Besu in a Box",
    "version": "0.0.1",
    "author": "https://github.com/lbthomsen",
    "ssh-key": "lth", 
    "containers": [
        {
            "hostname": "besu",
            "template": "debian-stretch",
            "peer-criteria": "BESU-GROUP",
            "size": "${containerSize}"
        }
    ],
    "peer-criteria": [
        {
            "name": "BESU-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/lbthomsen/subutai-bp-besu/archive/master.zip",
        "ansible-playbook": "site.yml",
        "extra-vars": [
            {
                "key": "ethereum_network", 
                "value": "${ethereumNetwork}"
            }, 
            {
                "key": "ethereum_network_id", 
                "value": "${ethereumNetworkId}"
            }, 
            {
                "key": "ethereum_password", 
                "value": "${ethereumPassword}"
            }
        ], 
        "groups": [
            {
                "name": "besu",
                "hostnames": [
                    "besu"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "mist",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "HUGE",
            "validation": "LARGE,HUGE"
        }, 
        "ethereumNetwork": {
            "description": "Select ethereum network",
            "type": "enum",
            "default": "testnet",
            "validation": "MAINNET,ROPSTEN,RINKEBY,GOERLI,DEV"
        }, 
        "ethereumNetworkId": {
            "description": "Enter private blockchain ID (if network = DEV!)",
            "type": "string",
            "default": "",
            "validation": "[0-9]+"
        },
        "ethereumPassword": {
            "description": "Enter private blockchain account password",
            "type": "string",
            "default": "somethingrather",
            "validation": "[a-zA-Z0-9]+"
        }
    }
}
